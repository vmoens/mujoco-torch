<mujoco model="swimmer">
  <compiler autolimits="true"/>
  <option integrator="Euler" timestep="0.01" density="1000">
    <flag constraint="disable"/>
  </option>
  <worldbody>
    <light pos="0 0 3"/>
    <body name="torso" pos="0 0 0">
      <joint name="root" type="free"/>
      <geom type="capsule" fromto="-0.1 0 0 0.1 0 0" size="0.04" mass="0.5"
             contype="0" conaffinity="0"/>
      <body name="link1" pos="0.1 0 0">
        <joint name="joint1" type="hinge" axis="0 0 1" damping="0.1"/>
        <geom type="capsule" fromto="0 0 0 0.15 0 0" size="0.04" mass="0.3"
               contype="0" conaffinity="0"/>
        <body name="link2" pos="0.15 0 0">
          <joint name="joint2" type="hinge" axis="0 0 1" damping="0.1"/>
          <geom type="capsule" fromto="0 0 0 0.15 0 0" size="0.04" mass="0.3"
                 contype="0" conaffinity="0"/>
        </body>
      </body>
    </body>
  </worldbody>
  <actuator>
    <motor joint="joint1" gear="0.1"/>
    <motor joint="joint2" gear="0.1"/>
  </actuator>
</mujoco>
